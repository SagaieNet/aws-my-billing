#!/usr/bin/php
<?php

# get service list
$ini = parse_ini_file(__DIR__ . '/config.ini');
$serviceList = explode(',',$ini['service_list']);

$start = strtotime('-5 day');

foreach ($serviceList as $serviceName){
  $options = array(
    "--step", "3600",
    "--start", $start,
    "DS:total:GAUGE:99999:U:U",
    "RRA:LAST:0:1:1000"
  );

  $ret = rrd_create("./rrd/{$serviceName}.rrd", $options, count($options));
  if (! $ret) {
    echo "<b>Creation error: </b>".rrd_error()."\n";
  }
}
?>
